<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rl_timeline_detail_photoview">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_timeline_detail_photo"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        ></android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/btn_timeline_detail_photo_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="18dp"
        ></Button>


    <Button
        android:id="@+id/btn_timeline_detail_photo_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="257dp"
        android:layout_marginBottom="7dp"/>

    <Button
        android:id="@+id/btn_timeline_detail_photo_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="257dp"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/tv_timeline_detail_photo_page_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        />

</RelativeLayout>